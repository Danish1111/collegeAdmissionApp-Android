<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/header_view"
        style="@style/MatchWidth"
        android:background="@color/status_red"
        android:elevation="6dp"
        android:orientation="horizontal">

        <com.example.abc.itmcollegealigarh.view.MaterialRippleLayout
            style="@style/WrapContent"
            app:mrl_rippleOverlay="true">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/iv_navigation"
                style="@style/WrapContent"
                android:layout_gravity="center_vertical"
                android:padding="20dp"
                android:tint="@color/black"
                app:srcCompat="@drawable/ic_left_arrow"
                app:tint="@color/white" />
        </com.example.abc.itmcollegealigarh.view.MaterialRippleLayout>

        <LinearLayout
            style="@style/WrapContent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <com.example.abc.itmcollegealigarh.view.TextViewPlus
                android:id="@+id/tv_header_title"
                style="@style/WrapContent"
                android:padding="15dp"
                android:text="BTech"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:customFont="@string/GothamMedium" />

        </LinearLayout>

    </RelativeLayout>

    <android.support.v4.widget.NestedScrollView style="@style/MatchWidth">

        <LinearLayout
            style="@style/MatchWidth"
            android:orientation="vertical">

            <LinearLayout
                style="@style/MatchWidth"
                android:background="#F9EBEA"
                android:orientation="vertical">

                <com.example.abc.itmcollegealigarh.view.TextViewPlus
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:ellipsize="end"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:singleLine="false"
                    android:text="Polytechnic - 1st year"
                    android:textColor="@color/cobalt_black"
                    android:textSize="18dp"
                    app:customFont="@string/GothamMedium" />

                <com.example.abc.itmcollegealigarh.view.TextViewPlus
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lineSpacingExtra="5dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="10dp"
                    android:singleLine="false"
                    android:text="Affiliated to BTE, Lucknow(code-545) "
                    android:textColor="@color/cobalt_black"
                    app:customFont="@string/GothamBook" />


                <com.example.abc.itmcollegealigarh.view.TextViewPlus
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:ellipsize="end"
                    android:lineSpacingExtra="5dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="15dp"
                    android:singleLine="false"
                    android:text="@string/polytech_first"
                    android:textColor="@color/cobalt_black"
                    app:customFont="@string/GothamBook" />


                <com.example.abc.itmcollegealigarh.view.TextViewPlus
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:singleLine="false"
                    android:text="Courses Seats"
                    android:textColor="@color/cobalt_black"
                    android:textSize="18dp"
                    app:customFont="@string/GothamMedium" />

                <com.example.abc.itmcollegealigarh.view.TextViewPlus
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lineSpacingExtra="5dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="10dp"
                    android:singleLine="false"
                    android:text="Diploma in Civil Engg. - 120 "
                    android:textColor="@color/cobalt_black"
                    app:customFont="@string/GothamBook" />


                <com.example.abc.itmcollegealigarh.view.TextViewPlus
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:ellipsize="end"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:singleLine="false"
                    android:text="Diploma in Mechanical Engg.(production)"
                    android:textColor="@color/cobalt_black"
                    android:textSize="18dp"
                    app:customFont="@string/GothamMedium" />

                <com.example.abc.itmcollegealigarh.view.TextViewPlus
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lineSpacingExtra="5dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="10dp"
                    android:singleLine="false"
                    android:text="Diploma in Automobile Engg. - 60 "
                    android:textColor="@color/cobalt_black"
                    app:customFont="@string/GothamBook" />

                <com.example.abc.itmcollegealigarh.view.TextViewPlus
                    android:layout_marginBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lineSpacingExtra="5dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="10dp"
                    android:singleLine="false"
                    android:text="Diploma in Electrical Engg. - 120"
                    android:textColor="@color/cobalt_black"
                    app:customFont="@string/GothamBook" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black_et" />


            <LinearLayout
                style="@style/MatchWidth"
                android:background="#E8F8F5"
                android:orientation="vertical">

                <com.example.abc.itmcollegealigarh.view.TextViewPlus
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:ellipsize="end"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:singleLine="false"
                    android:text="Polytechnic - 2nd year"
                    android:textColor="@color/cobalt_black"
                    android:textSize="18dp"
                    app:customFont="@string/GothamMedium" />

                <com.example.abc.itmcollegealigarh.view.TextViewPlus
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lineSpacingExtra="5dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="10dp"
                    android:singleLine="false"
                    android:text="Affiliated to BTE , lucknow  "
                    android:textColor="@color/cobalt_black"
                    app:customFont="@string/GothamBook" />


                <com.example.abc.itmcollegealigarh.view.TextViewPlus
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:ellipsize="end"
                    android:lineSpacingExtra="5dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="15dp"
                    android:singleLine="false"
                    android:text="@string/polytech_second"
                    android:textColor="@color/cobalt_black"
                    app:customFont="@string/GothamBook" />



            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black_et" />


        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>


</LinearLayout>
